<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    tools:context=".MainActivity">

    <!-- Modern App Bar / Header Area -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:paddingBottom="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/appTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="48dp"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Subtitle / Filter Switch Area -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchFilterContacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:checked="true"
                app:thumbTint="@color/md_theme_light_primary"
                app:trackTint="@color/md_theme_light_surface"
                app:layout_constraintBottom_toBottomOf="@+id/appTitle"
                app:layout_constraintEnd_toStartOf="@+id/btnSettings"
                app:layout_constraintTop_toTopOf="@+id/appTitle" />
            
            <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/filter_contacts_label"
                 android:textColor="#CCFFFFFF"
                 android:textSize="12sp"
                 android:layout_marginEnd="8dp"
                 app:layout_constraintEnd_toStartOf="@+id/switchFilterContacts"
                 app:layout_constraintBottom_toBottomOf="@+id/switchFilterContacts"
                 app:layout_constraintTop_toTopOf="@+id/switchFilterContacts"/>

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@id/btnInfo"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Settings" />

            <!-- Info Button -->
            <ImageButton
                android:id="@+id/btnInfo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_app_info"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Message Input Area (Glassmorphism Style) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#F5FFFFFF"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@+id/appTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/messageInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/message_label"
                        app:boxBackgroundMode="none"
                        app:hintTextColor="@color/md_theme_light_primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/messageInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top|start"
                            android:inputType="textMultiLine"
                            android:textColor="#000000"
                            android:text="@string/default_message" 
                            android:background="@android:color/transparent"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tab Layout -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="-12dp"
            android:background="@drawable/bg_tab_layout"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/md_theme_light_primary"
            app:tabTextColor="@color/text_secondary"
            app:tabRippleColor="@null"
            app:tabBackground="@drawable/selector_tab_background"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- View Pager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- FAB for Manual Input -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabManualInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white"
        app:backgroundTint="@color/md_theme_light_primary"
        android:contentDescription="@string/dialog_input_title"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
